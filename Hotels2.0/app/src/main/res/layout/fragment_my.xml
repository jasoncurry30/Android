<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color1"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@color/main">


                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="36dp"
                    android:src="@drawable/default_hd_avatar" />


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin12"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@+id/iv_avatar"
                    android:text="aaaaaaa"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginTop="@dimen/activity_vertical_margin12"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_push"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin12"
                    android:text="开启推送"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/sc_push"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin12"
                    android:longClickable="false"
                    android:textColor="@color/white"
                    app:showText="false"
                    app:switchPadding="5dp"
                    app:switchTextAppearance="@style/SwitchCompat.Text"
                    app:theme="@style/SwitchCompat.Control" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginTop="@dimen/activity_vertical_margin12"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin12"
                    android:text="WIFI下显示图片"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/sc_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin12"
                    android:longClickable="false"
                    android:textColor="@color/white"
                    app:showText="false"
                    app:switchPadding="5dp"
                    app:switchTextAppearance="@style/SwitchCompat.Text"
                    app:theme="@style/SwitchCompat.Control" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginTop="@dimen/activity_vertical_margin12"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin12"
                android:text="意见反馈"
                android:textColor="@color/text_gray"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_about"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginTop="@dimen/activity_vertical_margin12"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin12"
                android:text="关于我们"
                android:textColor="@color/text_gray"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginLeft="@dimen/activity_vertical_margin12"
                android:layout_marginRight="@dimen/activity_vertical_margin12"
                android:layout_marginTop="@dimen/activity_vertical_margin24"
                android:background="@drawable/shape_yellow"
                android:gravity="center"
                android:text="退出"
                android:textColor="@color/white"
                android:textSize="22sp" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>