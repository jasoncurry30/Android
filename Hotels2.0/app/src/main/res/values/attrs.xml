<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- 指示器组件 -->
    <declare-styleable name="ViewPagerIndicator">
        <attr name="selected_color" format="color|reference" />
        <attr name="default_color" format="color|reference" />
        <attr name="radius" format="dimension|reference" />
        <attr name="length" format="dimension|reference" />
        <attr name="distance" format="dimension|reference" />
        <attr name="num" format="integer" />
        <attr name="indicatorType">
            <enum name="LINE" value="0" />
            <enum name="CIRCLE" value="1" />
            <enum name="CIRCLE_LINE" value="2" />
            <enum name="BEZIER" value="3" />
            <enum name="SPRING" value="4" />
        </attr>
        <attr name="distanceType">
            <enum name="BY_RADIUS" value="0" />
            <enum name="BY_DISTANCE" value="1" />
            <enum name="BY_LAYOUT" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="UltraViewPager">
        <attr name="upv_autoscroll" format="integer" />
        <attr name="upv_infiniteloop" format="boolean" />
        <attr name="upv_ratio" format="float" />
        <attr name="upv_scrollmode" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="upv_disablescroll" format="enum">
            <enum name="none" value="0" />
            <enum name="backward" value="1" />
            <enum name="forward" value="2" />
        </attr>
        <attr name="upv_multiscreen" format="boolean" />
        <attr name="upv_automeasure" format="boolean" />
        <attr name="upv_itemratio" format="float" />
    </declare-styleable>

</resources>